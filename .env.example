# Archivo de variables de entorno para configuración
# Copia este archivo a .env y completa con tus credenciales reales

# ==========================================
# CONFIGURACIÓN DE SUPABASE / POSTGRESQL
# ==========================================
POSTGRES_HOST=your-project.supabase.co
POSTGRES_PORT=5432
POSTGRES_DATABASE=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password

# ==========================================
# CONFIGURACIÓN DE ASTRADB / CASSANDRA
# ==========================================
ASTRA_DB_TOKEN=your_astra_token_here
ASTRA_DB_ENDPOINT=your_astra_endpoint_here
ASTRA_DB_KEYSPACE=airbnb_metrics
# Legacy Cassandra (opcional)
CASSANDRA_BUNDLE_PATH=
CASSANDRA_USERNAME=
CASSANDRA_PASSWORD=
CASSANDRA_KEYSPACE=airbnb_ks

# ==========================================
# CONFIGURACIÓN DE MONGODB ATLAS
# ==========================================
MONGO_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_DATABASE=airbnb_db

# ==========================================
# CONFIGURACIÓN DE NEO4J AURADB
# ==========================================
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# ==========================================
# CONFIGURACIÓN DE REDIS CLOUD
# ==========================================
REDIS_URL=redis://default:password@redis-instance.cloud.redislabs.com:port

# ==========================================
# CONFIGURACIÓN GENERAL DE LA APLICACIÓN
# ==========================================
APP_NAME=Airbnb Backend
DEBUG=false
LOG_LEVEL=INFO
MAX_POOL_SIZE=20
TIMEOUT_SECONDS=30